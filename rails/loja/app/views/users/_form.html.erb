<%= form_for(@user) do |form| %>

  <div class="field">
    <%= form.label :name %><br/>
    <%= form.text_field :name, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :password %><br/>
    <%= form.password_field :password, cols: 40 %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, 'Confirm: ' %><br/>
    <%= form.password_field :password_confirmation, cols: 40 %>
  </div>

  <div class="field">
    <%= form.label :group %>
    <%= form.collection_select :group_id, Group.all , :id, :title %>
  </div>

  <div class="action">
    <%= form.submit %>
  </div>
<% end %>
