<div class="col-xs-12 thumbnail">
  <div class="col-xs-3">
    <%= image_tag product.image_url, class: "img-responsive" %>
  </div>

  <div class="col-xs-6">
    <h1> <%= product.title %> </h1>
   <%= product.price %> <br/>
   <p> <%= product.description %> </p>
  </div>

  <div class="col-xs-3">
    <%= link_to 'Show', product, class: "btn btn-primary btn-lg btn-block" %>
    <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-lg btn-block" %>
    <%= link_to 'Delete', product, method: :delete, class: "btn btn-danger btn-lg btn-block" %>
  </div>
</div>
