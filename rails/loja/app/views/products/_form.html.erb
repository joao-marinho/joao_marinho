<%= form_for(@product) do |form| %>

  <% if @product.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %>
        prohibited this product from being saved: </h2>

      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <div class="field">
    <%= form.label :title %><br/>
    <%= form.text_field :title, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :description %><br/>
    <%= form.text_area :description, cols: 40 %>
  </div>

  <div class="field">
    <%= form.label :image_url %><br/>
    <%= form.text_field :image_url, size: 100 %>
  </div>

  <div class="field">
    <%= form.label :price %><br/>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :categories %><br/>
    <% @categories.each do |category| %>
      <% selected = @product.categories.where(id: category.id).any? %>
      <%= check_box_tag("categories_selected[]", category.id, selected) %>
      <%= form.label category.title %>
    <% end %>
  </div>

  <div class="action">
    <%= form.submit %>
  </div>
<% end %>
