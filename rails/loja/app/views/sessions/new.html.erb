<div class="form_loja">

  <%= form_tag login_path, :method => :post, :class => 'form-horizontal ' do %>

    <div class="form-group">
      <%= label_tag :name, nil, class: "col-sm-2 control-label" %>
      <div class="col-xs-10">
        <%= text_field_tag :name, params[:name], class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
      <div class="col-xs-10">
        <%= password_field_tag :password, params[:password], class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <%= submit_tag "Login", class: "btn btn-default" %>
      </div>
    </div>

  <% end %>


</div>
