<%= form_tag do %>

  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] %>
  </div>

  <div class="field">
    <%= submit_tag "Login" %>
  </div>

<% end %>
