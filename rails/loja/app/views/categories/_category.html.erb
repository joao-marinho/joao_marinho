<div class="col-xs-12 thumbnail">

  <div class="col-xs-9">
    <h1> <%= category.title %> </h1>
    <p> Has <%= pluralize(category.products.count, "product") %> </p>
    <p> <%= category.description %> </p>
  </div>

  <div class="col-xs-3">
    <%= link_to 'Show', category, class: "btn btn-primary btn-lg btn-block" %>
    <%= link_to 'Edit', edit_category_path(category), class: "btn btn-warning btn-lg btn-block" %>
    <%= link_to 'Delete', category, method: :delete, class: "btn btn-danger btn-lg btn-block" %>
  </div>
</div>
